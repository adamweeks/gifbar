{
    "rules": {
        "indent": [2, 2, {"SwitchCase": 1}],
        "quotes": [1, "backtick"]
    },
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "globals": {
        "electron": true,
        "dirname": true
    },
    "parserOptions": {
        "jsx": true,
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "plugins": [
        "react"
    ]
    ,
    "extends": ["eslint:recommended", "plugin:react/recommended"]
}