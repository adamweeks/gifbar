{
  "name": "gifbar",
  "version": "1.4.0",
  "repository": "https://github.com/adamweeks/gifbar",
  "description": "GifBar is a gif searching utility that lives in your menubar.",
  "main": "index.js",
  "scripts": {
    "build": "./build.sh",
    "build-webpack": "webpack --progress --profile --colors --display-error-details --display-cached",
    "watch": "webpack --watch --progress --profile --colors --display-error-details --display-cached",
    "release-mac": "electron-packager build/ gifbar --platform=darwin --arch=x64 --overwrite --tmpdir=false --out=releases/ --app-version=$npm_package_version --icon=gifbar-icon.icns --no-prune",
    "release-win": "electron-packager build/ gifbar --platform=win32 --arch=x64 --overwrite --tmpdir=false --out=releases/ --app-version=$npm_package_version",
    "release": "npm run build; npm run release-mac; npm run release-win",
    "electron": "electron build",
    "test": "jest",
    "eslint": "eslint src"
  },
  "author": "Adam Weeks",
  "license": "MIT",
  "dependencies": {
    "auto-launch-patched": "~5.0.2",
    "autobind-decorator": "^2.1.0",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.4",
    "electron": "^1.7.5",
    "electron-packager": "^8.6.0",
    "electron-positioner": "^3.0.0",
    "electron-settings": "^3.1.1",
    "es6-shim": "^0.35.3",
    "eslint": "^4.3.0",
    "eslint-plugin-react": "^7.1.0",
    "extend": "^3.0.0",
    "file-loader": "~1.0.0",
    "greenkeeper-lockfile": "^1.7.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "menubar": "^5.2.3",
    "minimist": "^1.2.0",
    "node-notifier": "^5.1.2",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.6.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.2",
    "style-loader": "^0.18.2",
    "systemjs": "^0.20.17",
    "ts-loader": "^2.3.2",
    "typescript": "^2.4.2",
    "typings": "^2.1.1",
    "url-loader": "~0.5.9",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.6.1",
    "zone.js": "^0.8.16"
  },
  "jest": {
    "globals": {
      "electron": {
        "remote": {
          "BrowserWindow": true
        }
      }
    },
    "roots": [
      "<rootDir>/src/app/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|less)$": "identity-obj-proxy",
      "\\.(jpg|png|svg|gif)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "verbose": true
  }
}
